{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "const": "v1"
    },
    "kind": {
      "type": "string",
      "const": "Config"
    },
    "current-context": {
      "type": "string",
      "minLength": 1
    },
    "clusters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cluster": {
            "type": "object",
            "properties": {
              "certificate-authority-data": {
                "type": "string",
                "minLength": 1
              },
              "server": {
                "type": "string",
                "pattern": "https://.*$"
              }
            },
            "required": ["certificate-authority-data", "server"]
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["cluster", "name"]
      }
    },
    "contexts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "context": {
            "type": "object",
            "properties": {
              "cluster": {
                "type": "string",
                "minLength": 1
              },
              "user": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["cluster", "user"]
          },
          "name": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["context", "name"]
      }
    },
    "users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "user": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["token"]
          }
        },
        "required": ["name", "user"]
      }
    }
  },
  "required": ["apiVersion", "kind", "clusters", "current-context"]
}